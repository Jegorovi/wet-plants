{
  "name": "toolkit-v2",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=10.16.0 <12"
  },
  "scripts": {
    "lint:watch": "chokidar --verbose 'src/**/*.ts' -c 'tslint --project . -t verbose'",
    "prebuild": "rimraf ./build/*",
    "build": "tslint --project . && tsc",
    "start": "tsc -w -p . --rootDir .",
    "start:prod": "node -r ./tsconfig-paths-bootstrap.js build/src/index.js",
    "start:dev": "TS_NODE_FILES=true nodemon --watch 'src/**/*.ts' --exec 'ts-node' -r tsconfig-paths/register src/index.ts",
    "test": "jest --colors --coverage",
    "test:watch": "jest --watch"
  },
  "config": {
    "jest": {
      "setupFiles": [
        "jest-date-mock"
      ]
    },
    "ghooks": {
      "pre-commit": "npm run test && npm run build"
    }
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.15",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.6.6",
    "@types/serialport": "^7.0.4",
    "@types/socket.io": "^2.1.2",
    "chokidar": "^3.0.1",
    "chokidar-cli": "^2.0.0",
    "dotenv": "^8.0.0",
    "ghooks": "^2.0.4",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "simplytyped": "^3.2.3",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslib": "^1.10.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.18.0",
    "morgan": "^1.9.1",
    "morgan-body": "^2.4.7",
    "serialport": "^7.1.5",
    "socket.io": "^2.4.0",
    "source-map-support": "^0.5.12"
  }
}
